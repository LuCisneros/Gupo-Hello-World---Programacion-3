<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nueva_imagen_principal"/>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButtom_1"
                    android:layout_width="180dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/boton_1"/>

                <ImageButton
                    android:id="@+id/imageButtom_2"
                    android:layout_width="180dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/boton_2"/>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButtom_3"
                    android:layout_width="180dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/boton_3"/>

                <ImageButton
                    android:id="@+id/imageButtom_4"
                    android:layout_width="180dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/boton_4"/>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButtom_5"
                    android:layout_width="180dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/boton_5"/>

                <ImageButton
                    android:id="@+id/imageButtom_6"
                    android:layout_width="180dp"
                    android:layout_height="240dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/boton_6"/>

            </TableRow>
        </LinearLayout>
    </ScrollView>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorLightRed2"
        app:menu="@menu/menu"
        app:headerLayout="@layout/nav_haeder"
        android:fitsSystemWindows="true">

    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>